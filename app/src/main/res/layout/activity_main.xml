<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.calc.MainActivity">

    <!-- 输入及结果显示 -->
    <LinearLayout
        android:id="@+id/show_area_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/calc_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="30sp"
            android:gravity="right|center_vertical">

        </TextView>
        <TextView
            android:id="@+id/request_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="35sp"
            android:gravity="right|center_vertical">

        </TextView>
    </LinearLayout>

    <!-- 按钮区域 -->
    <LinearLayout
        android:id="@+id/button_area_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <!-- C 7 4 1 % -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <!-- C -->
            <Button
                android:id="@+id/btn_Clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="C"
                android:textSize="40sp"
                android:textColor="#07f"
                android:layout_weight="1">
            </Button>
            <!-- 7 -->
            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="7"
                android:textColor="#444"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_weight="1">
            </Button>
            <!-- 4 -->
            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
            <!-- 1 -->
            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
            <!-- % -->
            <Button
                android:id="@+id/btn_mod"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="%"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
        </LinearLayout>

        <!-- ÷ 8 5 2 0 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <!-- ÷ -->
            <Button
                android:id="@+id/btn_div"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="÷"
                android:textSize="40sp"
                android:textColor="#07f"
                android:layout_weight="1">
            </Button>
            <!-- 8 -->
            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="8"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
            <!-- 5 -->
            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="5"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
            <!-- 2 -->
            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
            <!-- 0 -->
            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="0"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
        </LinearLayout>

        <!-- × 9 6 3 . -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <!-- × -->
            <Button
                android:id="@+id/btn_mul"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="×"
                android:textSize="40sp"
                android:textColor="#07f"
                android:layout_weight="1">
            </Button>
            <!-- 9 -->
            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="9"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
            <!-- 6 -->
            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="6"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
            <!-- 3 -->
            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="3"
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
            <!-- . -->
            <Button
                android:id="@+id/btn_point"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="."
                android:textColor="#444"
                android:textSize="40sp"
                android:layout_weight="1">
            </Button>
        </LinearLayout>

        <!-- Del －＋＝ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <!-- Del -->
            <Button
                android:id="@+id/btn_del"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Del"
                android:textSize="40sp"
                android:textColor="#07f"
                android:layout_weight="1">
            </Button>
            <!-- － -->
            <Button
                android:id="@+id/btn_sub"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="－"
                android:textSize="40sp"
                android:textColor="#07f"
                android:layout_weight="1">
            </Button>
            <!-- ＋ -->
            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="＋"
                android:textSize="40sp"
                android:textColor="#07f"
                android:layout_weight="1">
            </Button>
            <!-- ＝ -->
            <Button
                android:id="@+id/btn_equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="＝"
                android:textSize="40sp"
                android:textColor="#07f"
                android:layout_weight="2">
            </Button>
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>
